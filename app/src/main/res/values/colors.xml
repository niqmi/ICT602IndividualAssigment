    <color name="text_secondary_dark">#757575</color> <!-- Slightly lighter dark text for hints, labels -->
    <color name="text_light">#FFFFFF</color> <!-- Light text for dark backgrounds -->

    <!-- Card/Result Box Backgrounds -->
    <color name="card_light_background">#FFFFFF</color> <!-- White for cards/containers -->
    <color name="result_box_background">#E3F2FD</color> <!-- Very light blue for result display -->

