    <color name="colorPrimaryVariant">#1976D2</color> <!-- Darker shade for status bar/accents -->
    <color name="colorOnButton">#FFC107</color>
    <color name="colorBlack">@color/colorOnSurface</color>
    <color name="colorOnPrimary">#FFFFFF</color> <!-- Text color on primary background -->

    <!-- Secondary Accent Green: Suggests efficiency, growth, positive results -->
    <color name="colorSecondary">#4CAF50</color> <!-- A fresh, medium green -->
    <color name="colorSecondaryVariant">#388E3C</color> <!-- Darker green for accents -->
    <color name="colorOnSecondary">#FFFFFF</color> <!-- Text color on secondary background -->

    <!-- Backgrounds and Surfaces -->
    <color name="colorBackground">#F5F5F5</color> <!-- Soft, light grey background -->
    <color name="colorOnBackground">#212121</color> <!-- Dark text on light background -->
    <color name="colorSurface">#FFFFFF</color> <!-- Card/input field background -->
