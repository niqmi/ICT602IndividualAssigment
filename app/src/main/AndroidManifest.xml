<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ElectricCalculatorMobile"
        tools:targetApi="31">

        <!-- MainActivity declaration - This is your app's main entry point -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- AboutActivity declaration -->
        <activity android:name=".AboutActivity" />

        <!-- HistoryActivity declaration -->
        <activity android:name=".HistoryActivity" />

        <!-- DetailActivity declaration (for showing individual bill details) -->
        <activity android:name=".DetailActivity" />

    </application>
</manifest>
